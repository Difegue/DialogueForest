<Page
    x:Class="DialogueForest.Views.DialogueTreePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    xmlns:strings="using:DialogueForest.Localization.Strings"
    xmlns:viewmodels="using:DialogueForest.ViewModels"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d">

    <Page.Resources>
        <media:AttachedCardShadow x:Key="CommonShadow" Offset="0,-2" Opacity="0.8" Color="Black" BlurRadius="10" />

        <Style BasedOn="{StaticResource DefaultGridViewItemStyle}" TargetType="GridViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Width" Value="270"/>
            <Setter Property="Margin" Value="12,14,12,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid>
                            <ContentPresenter x:Name="itemContent">
                                <ui:Effects.Shadow>
                                    <media:AttachedCardShadow Offset="0,2" Opacity="0.4" Color="Black" BlurRadius="10" />
                                </ui:Effects.Shadow>
                            </ContentPresenter>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="itemContent" Storyboard.TargetProperty="Margin">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.02" Value="0,-3,0,3" />
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.05" Value="0,-1,0,1" />
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.08" Value="0,2,0,-2" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                        <VisualState.Setters>
                                            <Setter Target="itemContent.(ui:Effects.Shadow).Opacity" Value="0"/>

                                            <Setter Target="itemContent.BorderBrush" Value="{ThemeResource SubtleFillColorTertiaryBrush}" />
                                            <Setter Target="itemContent.Foreground" Value="{ThemeResource TextFillColorTertiaryBrush}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="itemContent" Storyboard.TargetProperty="Margin">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.01" Value="0,0,0,0" />
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.03" Value="0,-2,0,2" />
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.12" Value="0,-3,0,3" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                        <VisualState.Setters>
                                            <Setter Target="itemContent.(ui:Effects.Shadow).Opacity" Value="0.2"/>

                                            <Setter Target="itemContent.BorderBrush" Value="{ThemeResource ButtonBackgroundPointerOver}" />
                                            <Setter Target="itemContent.Foreground" Value="{ThemeResource GridViewItemForegroundPointerOver}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="PointerOverSelected">
                                        <VisualState.Setters>
                                            <Setter Target="itemContent.BorderBrush" Value="{ThemeResource SubtleFillColorSecondaryBrush}" />
                                            <Setter Target="itemContent.Foreground" Value="{ThemeResource GridViewItemForegroundPointerOver}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>

                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="NodeCardTemplate" x:DataType="viewmodels:DialogueNodeViewModel">
            <Grid Style="{StaticResource CardGrid}" Margin="-1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="24" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>
                <Grid.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutSubItem Text="Links to:" Tag="links_to" >
                            <MenuFlyoutSubItem.Icon>
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEA54;" />
                            </MenuFlyoutSubItem.Icon>
                        </MenuFlyoutSubItem>
                        <MenuFlyoutSubItem Text="Linked by:" Tag="linked_by">
                            <MenuFlyoutSubItem.Icon>
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE11F;" />
                            </MenuFlyoutSubItem.Icon>
                        </MenuFlyoutSubItem>
                        <MenuFlyoutItem Text="Pin this Node" Command="{x:Bind PinDialogueCommand}"
                                            Visibility="{x:Bind IsPinned, Converter={StaticResource ReverseBoolToVisibilityConverter}}"  >
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE141;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Unpin this Node" Command="{x:Bind UnpinDialogueCommand}"
                                            Visibility="{x:Bind IsPinned, Converter={StaticResource BoolToVisibilityConverter}}"  >
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE196;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Move to Trash" Command="{x:Bind MoveToTrashCommand}"
                                            Visibility="{x:Bind IsTrashed, Converter={StaticResource ReverseBoolToVisibilityConverter}}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE107;" Foreground="{ThemeResource DestructiveActionForeground}" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Permanenly Delete" Command="{x:Bind DeleteCommand}"
                                            Visibility="{x:Bind IsTrashed, Converter={StaticResource BoolToVisibilityConverter}}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE621;" Foreground="{ThemeResource DestructiveActionForeground}"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </Grid.ContextFlyout>

                <Border Background="{ThemeResource SystemAccentColor}" Grid.RowSpan="2" Width="4" HorizontalAlignment="Left" Margin="-17" CornerRadius="4,0,0,4"/>

                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource BaseTextBlockStyle}"
                               Text="{x:Bind NodeTitle, Mode=OneWay}" TextTrimming="CharacterEllipsis"/>

                <Button Grid.Row="0" Grid.Column="1" Padding="4,0" ToolTipService.ToolTip="Sort" Margin="0,-8,-8,8"
                                  HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button.Content>
                        <SymbolIcon Symbol="More"/>
                    </Button.Content>
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutSubItem Text="Links to:" Tag="links_to" >
                                <MenuFlyoutSubItem.Icon>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEA54;" />
                                </MenuFlyoutSubItem.Icon>
                            </MenuFlyoutSubItem>
                            <MenuFlyoutSubItem Text="Linked by:" Tag="linked_by">
                                <MenuFlyoutSubItem.Icon>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE11F;" />
                                </MenuFlyoutSubItem.Icon>
                            </MenuFlyoutSubItem>
                            <MenuFlyoutItem Text="Pin this Node" Command="{x:Bind PinDialogueCommand}"
                                            Visibility="{x:Bind IsPinned, Converter={StaticResource ReverseBoolToVisibilityConverter}}"  >
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE141;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Unpin this Node" Command="{x:Bind UnpinDialogueCommand}"
                                            Visibility="{x:Bind IsPinned, Converter={StaticResource BoolToVisibilityConverter}}"  >
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE196;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Move to Trash" Command="{x:Bind MoveToTrashCommand}"
                                            Visibility="{x:Bind IsTrashed, Converter={StaticResource ReverseBoolToVisibilityConverter}}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE107;" Foreground="{ThemeResource DestructiveActionForeground}" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Permanenly Delete" Command="{x:Bind DeleteCommand}"
                                            Visibility="{x:Bind IsTrashed, Converter={StaticResource BoolToVisibilityConverter}}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE621;" Foreground="{ThemeResource DestructiveActionForeground}"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>

                <TextBlock Grid.Row="2" Grid.ColumnSpan="2" TextWrapping="Wrap" MaxLines="3" TextTrimming="CharacterEllipsis"
                        Text="{x:Bind PlainText, Mode=OneWay}"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="ContentArea" >
        <Grid.RowDefinitions>
            <RowDefinition Height="136" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Spacing="12" Margin="{StaticResource SmallLeftTopRightMargin}">
            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="{x:Bind ViewModel.Title}" HorizontalAlignment="Center"/>
            <AutoSuggestBox PlaceholderText="Search Nodes..." QueryIcon="Zoom"/>

            <Grid HorizontalAlignment="Stretch" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Command="{x:Bind ViewModel.AddNodeCommand}" Style="{ThemeResource AccentButtonStyle}"
                        ToolTipService.ToolTip="{x:Bind strings:Resources.TreeViewAddNode}">
                    <StackPanel Spacing="4" Orientation="Horizontal">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE109;" FontSize="18" />
                    </StackPanel>

                </Button>

                <StackPanel Orientation="Horizontal" Spacing="8" Grid.Column="2" HorizontalAlignment="Right">
                    <Button Command="{x:Bind ViewModel.AddNodeCommand}"
                                    ToolTipService.ToolTip="{x:Bind strings:Resources.TreeViewGraphView}">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEC26;" FontSize="18" />
                    </Button>

                    <muxc:DropDownButton ToolTipService.ToolTip="{x:Bind strings:Resources.TreeViewSortBy}">
                        <muxc:DropDownButton.Content>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE174;" FontSize="18"/>
                        </muxc:DropDownButton.Content>
                        <muxc:DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem Text="Send">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE725;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Reply">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8CA;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Reply All">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8C2;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </muxc:DropDownButton.Flyout>
                    </muxc:DropDownButton>

                    <AppBarSeparator Padding="0"/>

                    <Button Command="{x:Bind ViewModel.DeleteCommand}"
                                    ToolTipService.ToolTip="{x:Bind strings:Resources.TreeViewDeleteTree}">
                        <FontIcon Foreground="{ThemeResource DestructiveActionForeground}"
                                  FontFamily="Segoe Fluent Icons" Glyph="&#xE107;" FontSize="18"/>
                    </Button>
                </StackPanel>

                

            </Grid>

        </StackPanel>

        <ScrollViewer Grid.Row="1" >

            <controls:AdaptiveGridView
                    ItemsSource="{x:Bind ViewModel.Nodes}"
                    ItemTemplate="{StaticResource NodeCardTemplate}"
                    IsItemClickEnabled="True"
                    SelectionMode="None"
                    StretchContentForSingleRow="True"
                    DesiredWidth="270"
                    ItemHeight="96"
                    ItemClickCommand="{x:Bind ViewModel.ShowNodeCommand}"/>

        </ScrollViewer>

        <StackPanel Orientation="Horizontal" Spacing="8" Grid.Row="2" Margin="8, -8">
            <Grid Background="{ThemeResource SystemAccentColor}" CornerRadius="8" Padding="8,4">
                <TextBlock Text="1337 words" FontWeight="SemiBold" Foreground="{ThemeResource SystemControlForegroundAltHighBrush}"
                           FontFamily="Segoe UI Variable Display"/>
            </Grid>
            <Grid Background="{ThemeResource SystemAccentColor}" CornerRadius="8" Padding="8,4" ui:Effects.Shadow="{StaticResource CommonShadow}">
                <TextBlock Text="45 dialogues" FontWeight="SemiBold" Foreground="{ThemeResource SystemControlForegroundAltHighBrush}"
                           FontFamily="Segoe UI Variable Display"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Visibility="{x:Bind ViewModel.IsNodesEmpty, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">


            <Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Name="svg4" Width="90" Height="90">
                <Canvas.RenderTransform>
                    <CompositeTransform ScaleX="0.085" ScaleY="0.085" />
                </Canvas.RenderTransform>
                <Canvas.Resources>
                    <LinearGradientBrush xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Key="linearGradient3233" MappingMode="RelativeToBoundingBox" StartPoint="0,0" EndPoint="1,1">
                        <LinearGradientBrush.GradientStops>
                            <GradientStopCollection>
                                <GradientStop Color="#FF5AA02C" Offset="0"/>
                                <GradientStop Color="#FF66FF00" Offset="1"/>
                            </GradientStopCollection>
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                    <LinearGradientBrush xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Key="linearGradient3235" MappingMode="Absolute" StartPoint="620,730" EndPoint="973,-11">
                        <LinearGradientBrush.GradientStops>
                            <GradientStopCollection>
                                <GradientStop Color="#FF5AA02C" Offset="0"/>
                                <GradientStop Color="#FF66FF00" Offset="1"/>
                            </GradientStopCollection>
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                    <LinearGradientBrush xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Key="linearGradient3693" MappingMode="Absolute" StartPoint="160,493" EndPoint="553,75">
                        <LinearGradientBrush.GradientStops>
                            <GradientStopCollection>
                                <GradientStop Color="#FF5AA02C" Offset="0"/>
                                <GradientStop Color="#FF66FF00" Offset="1"/>
                            </GradientStopCollection>
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Canvas.Resources>
                <!--Unknown tag: sodipodi:namedview-->
